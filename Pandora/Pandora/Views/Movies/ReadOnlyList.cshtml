@model IEnumerable<Pandora.Models.Movie>
@{
    ViewBag.Title = "Movies";
}


<h2>Movies</h2>


<table id="movies" class=" table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie &nbsp;&nbsp;&nbsp;&nbsp;<text style="color: lightgray;">sort by name</text></th>
            <th>Genre&nbsp;&nbsp;&nbsp;&nbsp;<text style="color: lightgray;">sort by genre</text></th>
            <th>Release Date&nbsp;&nbsp;&nbsp;&nbsp;<text style="color: lightgray;">sort by Release date</text></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
        <tr>
            <td>@movie.Name </td>
            <td>@movie.Genre.Name</td>
            <td>@movie.ReleaseDate.ToString("d MMM yyyy")</td>
        </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table= $("#movies").DataTable();
        });
    </script>
}